@page "/about"

<PageTitle>About | PubNet</PageTitle>

<MudStack Row>
	<MudSpacer/>
	<MudCard>
		<MudCardHeader>
			<CardHeaderContent>
				<PubNetLogo Animated Size="300"/>
			</CardHeaderContent>
		</MudCardHeader>
		<MudCardContent>
			<MudStack AlignItems="AlignItems.Center">
				<MudText Typo="Typo.h5">PubNet</MudText>
				<MudText>Version: @(GitVersionInformation.SemVer)</MudText>
				<MudText>Commit: <CommitLink/></MudText>
			</MudStack>
		</MudCardContent>
	</MudCard>
	<MudSpacer/>
</MudStack>
