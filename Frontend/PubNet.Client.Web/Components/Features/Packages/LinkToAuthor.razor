@code {

	[Parameter, EditorRequired]
	public required string Name { get; set; }

	[Parameter]
	public RenderFragment? ChildContent { get; set; }

	[Parameter]
	public bool IsNavLink { get; set; }

	private string Href => $"/author/{Name}";
}

@if (IsNavLink)
{
	<MudNavLink Href="@Href">
		@if (ChildContent is not null)
		{
			@ChildContent
		}
		else
		{
			@Name
		}
	</MudNavLink>
}
else
{
	<MudLink Href="@Href">
		@if (ChildContent is not null)
		{
			@ChildContent
		}
		else
		{
			@Name
		}
	</MudLink>
}
