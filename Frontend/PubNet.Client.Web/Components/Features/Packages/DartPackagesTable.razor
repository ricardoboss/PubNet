@code {

	[Parameter, EditorRequired]
	public required DartPackageListDto PackageList { get; set; }

	[Parameter]
	public bool Editable { get; set; }

	[Parameter]
	public bool ShowAuthorColumn { get; set; } = true;

}

@if (PackageList is { Packages: { } packages, TotalHits: { } total and > 0 })
{
	<MudTable Items="packages" FixedHeader FixedFooter TotalItems="total">
		<HeaderContent>
			<MudTh>Name</MudTh>
			<MudTh>Latest Version</MudTh>
			<MudTh>Published</MudTh>

			@if (ShowAuthorColumn)
			{
				<MudTh>Author</MudTh>
			}

			@if (Editable)
			{
				<MudTh></MudTh>
			}
		</HeaderContent>
		<RowTemplate>
			<MudTh scope="row">
				<MudLink Href="@($"/dart/{context.Name}")">@context.Name</MudLink>
			</MudTh>
			<MudTd>
				<MudLink Href="@($"/dart/{context.Name}/version/{context.Latest?.Version}")">@context.Latest?.Version</MudLink>
			</MudTd>
			<MudTd>@context.Latest?.PublishedAt</MudTd>

			@if (ShowAuthorColumn)
			{
				<MudTd>
					<MudLink Href="@($"/author/{context.Author}")">@context.Author</MudLink>
				</MudTd>
			}

			@if (Editable)
			{
				<MudTd>
					<MudButtonGroup>
						<MudIconButton Icon="@Icons.Material.Rounded.Edit"/>
					</MudButtonGroup>
				</MudTd>
			}
		</RowTemplate>
		<PagerContent>
			<MudTablePager/>
		</PagerContent>
	</MudTable>
}
else
{
	<MudText Align="Align.Center">No packages found</MudText>
}
