@page "/browse"
@page "/browse/packages"
@inject ApiClient Http

<PageTitle>Packages</PageTitle>

@if (_response == null)
{
	<Paragraph>
		<em>Loading...</em>
	</Paragraph>
}
else
{
	<PackagesList Packages="Packages" ShowAuthor="@true" />
}

@code {
	private PackageListDto? _response;

	private IEnumerable<PackageVersionDtoPackageDto>? Packages => _response?.Packages;

	protected override async Task OnParametersSetAsync()
	{
		_response = await Http.Packages.Search.GetAsync();
	}

}
